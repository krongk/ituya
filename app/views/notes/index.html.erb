<h1>Listing notes</h1>

<table>
<% @notes.each do |note| %>
	<tr>
    <td><%=h note.user.login %>
    |<%=h note.from_user_id %>
    |<%=h note.from_user_mail %>
    |<%= link_to 'Destroy', user_note_path(@user,note), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
	<tr>
    <td colspan="4"><%=h note.message %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_user_note_path(@user) %>