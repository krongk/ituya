<h1>New note</h1>

<% form_for([ @user, @note]) do |f| %>
  <%= f.error_messages %>

	<% if logged_in? %>
		<p>
			<%= f.label :from_user_id %><br />
			<%= f.text_field :from_user_id ,:value => current_user.id%>
		</p>
	<% else %>
		<p>
			<%= f.label :from_user_mail %><br />
			<%= f.text_field :from_user_mail %>
		</p>
	<% end %>

  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit '添加' %>
  </p>
<% end %>

<%= link_to 'Back', user_notes_path(@user) %>