<h1>Listing follows</h1>

<table>
  <tr>
    <th>User</th>
    <th>The followed</th>
  </tr>

<% @follows.each do |follow| %>
	<% u =User.find(follow.the_followed_id) %>
  <tr>
    <td><%=h follow.user.login %></td>
    <td><%= link_to u.login, u %></td>
    <td><%= link_to 'Destroy', user_follow_path(@user,follow), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New follow', new_user_follow_path(@user) %>