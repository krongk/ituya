<h1>Editing follow</h1>

<% form_for(@follow) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :the_followed_id %><br />
    <%= f.text_field :the_followed_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

